%h3.ui-widget Kröken #{@date}
%form#schedule{:method=> "post", :action=> "/schedule"}
	%input{:type=> "hidden", :name=> "date", :value=>"#{@date}"}
	%div
		%label Fylla kylar
		%input{:type=> "text", :name => "fridge", :charset=> 'utf-8'}
	%div
		%label Bära bardelar
		%input{:type=> "text", :name => "carry", :charset=> 'utf-8'}
	%div
		%label Jobba i baren
		%input{:type=> "text", :name => "bar", :charset=> 'utf-8'}
	%div
		%label Står i köket
		%input{:type=> "text", :name => "chef", :charset=> 'utf-8'}
	%div
		%label Städar efteråt
		%input{:type=> "text", :name => "clean", :charset=> 'utf-8'}	
	%div
		%input{:type => "submit", :value => "spara", :charset=> 'utf-8'}
		%a.align-right{:href=> "/make/order/#{@date}"} Hämta ut alkohol
		-unless @order.nil?
			%a.align-right{:href=> "/return/order/#{@order.id}"} Lämna in alkohol
-unless @order.nil?
	-for article in @order.articles
		%p.ui-widget #{article.name}: #{article.amount}